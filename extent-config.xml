<extentreports>
	<configuration>
		<!-- report theme -->
		<!-- standard, dark -->
		<theme>dark</theme>

		<!-- document encoding -->
		<!-- defaults to UTF-8 -->
		<encoding>UTF-8</encoding>

		<!-- protocol for script and stylesheets -->
		<!-- defaults to https -->
		<protocol>https</protocol>

		<!-- title of the document -->
		<documentTitle>Automation_Report</documentTitle>

		<!-- report name - displayed at top-nav -->
		<reportName>D-Events Mobile App | </reportName>

		<!-- report headline - displayed at top-nav, after reportHeadline -->
		<reportHeadline>API_TestAutomation_Report</reportHeadline>

		<!-- global date format override -->
		<!-- defaults to yyyy-MM-dd -->
		<dateFormat>MMM dd, yyyy</dateFormat>

		<!-- global time format override -->
		<!-- defaults to HH:mm:ss -->
		<timeFormat>hh:mm:ss a zzz</timeFormat>

		<!-- custom javascript -->
		<scripts>
      <![CDATA[
        $(document).ready(function() {
         	$('#parentWithoutNodes').prop("checked", true).click();
			$('#test-count-setting > div.modal-footer > a')[0].click();
			$('#step-dashboard-filter-info').prop("checked", false).click();
			$('#step-status-filter > div.modal-footer > a')[0].click();
			$('.dashboard-view').click();
			
        });
      ]]>
		</scripts>

		<!-- custom styles -->
		<styles>
      <![CDATA[
        	.report-name {font-size: large; color: rgb(134, 188, 37);}
        	.report-headline {font-size: large;}
      ]]>
		</styles>
	</configuration>
</extentreports>